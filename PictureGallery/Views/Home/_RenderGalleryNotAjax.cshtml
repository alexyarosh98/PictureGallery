@model int[]
<div class="gallery" id="gallery" style="width: 100%; height: 30%">
    <ul class="pagination" id="glrPag">
        
        @{
            for (int i = 0; i < 3; i++)
            {
                <li>
                    @if (i == 0)
                    {
                        @*<a href="#" class="active">1</a>*@
                        @Html.ActionLink("1","GetGalleryPage",new{page=1},new {@class="active"})
                        
                        continue;
                    }
                    @*<a href="GetGalleryPage?page=2">@(i+1)</a>*@
                    @Html.ActionLink((i+1).ToString(), "GetGalleryPage",new {page=i+1});
                </li>
            }
        }
    </ul>

    <div class="row" id="items">
        <div class="col-sm-4" id="item1">
            <img src="@Url.Action("GetImage",new{id=Model[0]})" style="width: 100%;" id="img1" class="item" />
        </div>
        <div class="col-sm-4" id="item2">
            <img src="@Url.Action("GetImage",new{id=Model[1]})" style="width: 100%" id="img2" class="item"/>
        </div>
        <div class="col-sm-4" id="item3">
            <img src="@Url.Action("GetImage",new{id=Model[2]})" style="width: 100%" id="img3" class="item"/>
        </div>
    </div>
</div>


